{
  "pluginAlias": "OnStarBeta",
  "pluginType": "accessory",
  "footerDisplay": "For additional info please check the [homebridge-onstar](https://github.com/samrum/homebridge-onstar/) repo.",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "BetaCar"
      },
      "deviceId": {
        "title": "Device ID",
        "type": "string",
        "required": true,
        "default": "",
        "description": "A random version 4 UUID. Use an online generator to get this."
      },
      "vin": {
        "title": "VIN",
        "type": "string",
        "required": true,
        "default": ""
      },
      "username": {
        "title": "OnStar Username",
        "type": "string",
        "required": true,
        "default": ""
      },
      "password": {
        "title": "OnStar Password",
        "type": "string",
        "required": true,
        "default": ""
      },
      "onStarPin": {
        "title": "OnStar Pin",
        "type": "string",
        "required": true,
        "default": ""
      },
      "enableAlert": {
        "title": "Enable Alert Switch",
        "type": "boolean",
        "default": false
      },
      "enableCharger": {
        "title": "Enable Charger Switch",
        "type": "boolean",
        "default": false
      },
      "enableDoors": {
        "title": "Enable Doors Lock",
        "type": "boolean",
        "default": false,
        "description": "By default, the lock will always reset to a Locked state."
      },
      "doorsDefaultToUnlocked": {
        "title": "Default Doors to Unlocked State",
        "type": "boolean",
        "default": false
      }
    }
  }
}
